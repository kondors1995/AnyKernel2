    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor interactive
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor interactive
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 652000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1689000
    write /sys/devices/system/cpu/cpu0/cpufreq/interactive/boost_count 6
    write /sys/devices/system/cpu/cpu0/cpufreq/interactive/boost_ceiling 12
    write /sys/devices/system/cpu/cpu0/cpufreq/interactive/freq_step 6
    write /sys/devices/system/cpu/cpu0/cpufreq/interactive/down_threshold 70
    write /sys/devices/system/cpu/cpu0/cpufreq/interactive/down_threshold_suspended 85
    write /sys/devices/system/cpu/cpu0/cpufreq/interactive/up_threshold 75
    write /sys/devices/system/cpu/cpu6/online 0
    write /sys/devices/system/cpu/cpu7/online 0
    # Power efficient workques
